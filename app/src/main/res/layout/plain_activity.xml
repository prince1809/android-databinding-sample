<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="@string/name_label"
            android:layout_width="38dp"
            android:layout_height="wrap_content"
            android:id="@+id/name_label" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/plain_name" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="128dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/name_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="@string/last_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastname_label" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/plain_name"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/plain_lastname" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="128dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/lastname_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" app:layout_constraintBottom_toTopOf="@+id/likes_label"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintVertical_chainStyle="packed"
            android:contentDescription="@string/profile_avatar_cd" android:minHeight="48dp" android:minWidth="48dp"/>
    <Button
            android:text="@string/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/like_button" app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginEnd="16dp"
            android:onClick="onLike" android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/likes"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"/>
    <TextView
            android:text="@string/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likes_label" app:layout_constraintEnd_toEndOf="@+id/imageView"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView" android:layout_marginStart="8dp"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/likes"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likes"
            app:layout_constraintTop_toBottomOf="@+id/likes_label"
            app:layout_constraintStart_toStartOf="@+id/likes_label" app:layout_constraintEnd_toEndOf="@+id/likes_label"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/like_button"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            app:layout_constraintEnd_toEndOf="@+id/like_button" android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="@+id/like_button"
            android:layout_marginStart="8dp" android:progressBackgroundTint="@android:color/darker_gray"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/like_button"
            app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>